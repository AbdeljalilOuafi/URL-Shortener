# Django Configuration
SECRET_KEY=django-insecure-url-shortener-dev-key-CHANGE-THIS-IN-PRODUCTION
DEBUG=True
# Use * to allow all hosts (recommended for multi-domain URL shortener)
# In production, you can use: your-domain.com,*.your-domain.com
ALLOWED_HOSTS=*

# Database Configuration
# Development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL) - Uncomment and configure:
# DATABASE_URL=postgresql://username:password@localhost:5432/url_shortener

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# URL Shortener Settings
# Leave empty to allow all domains (recommended for development)
ALLOWED_SHORT_URL_DOMAINS=

# Production example (comma-separated list):
# ALLOWED_SHORT_URL_DOMAINS=pay.client1.com,short.client2.com,links.client3.com

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED=False
RATE_LIMIT_PER_MINUTE=60
